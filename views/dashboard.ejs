<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@700&display=swap');

        Body {
            font-family: 'Inter', sans-serif;
        }

        .container {
            min-height: 95vh;
            width: 75%;
            margin: auto;
            background-color: black;
            color: white;

        }

        .inp-fields {
            display: flex;
            border-bottom: 2px solid white;
            border-top: 2px solid white;
            justify-content: space-between;
            padding: 10px;
        }

        .fields {
            display: flex;
            flex-direction: column;
            font-size: 14px;

        }

        #add-btn {
            background-color: #0036C2;
            color: white;
            border: none;
        }

        h2 {
            padding: 10px;
        }

        input {
            border-radius: 5px;
        }

        .all-books {
            border-top: 2px solid white;
            display: flex;
            padding: 10px;
            justify-content: space-around;
            flex-wrap: wrap;
        }

        .book-container {
            background-color: #F1F1F1;
            flex: 1 1 0px;
            margin: 5px;
            text-align: left;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            border-radius: 5px;
        }

        .b-name {
            color: #0036C2;
            font-weight: 800;
            font-size: 30px;
            min-height: 115px;
        }

        .b-author {
            color: #1F1F1F;
            font-size: 11px;
        }

        .b-category {
            color: #000000;
            font-weight: 800;
        }

        .text-container {
            padding: 0 4px 0 6px;
        }

        .btn-container {
            display: flex;
        }

        .btn {
            flex: 1 1 0px;
            height: 37px;
            border: none;
            border-radius: 4px;
            color: white;
        }

        .btn-update {
            background: #0036C2;
        }

        .btn-delete {
            background: #BC2A2A;
        }
    </style>
</head>

<body>
    <div class="container">

        <h2>Inventory Management</h2>
        <form action='/addBook' method="POST">
            <div class="inp-fields">
                <div class="fields">

                    <label for="title">Title </label>
                    <input id="title" type="text" placeholder="Enter Title Here" name="book-title" required>
                </div>
                <div class="fields">

                    <label for="author">Author </label>
                    <input id="author" type="text" placeholder="Enter Author name" name="author-name" required>
                </div>
                <div class="fields">

                    <label for="price">Price </label>
                    <input id="price" type="text" placeholder="Enter price" name="book-price" required>
                </div>
                <div class="fields">

                    <label for="category">Category </label>
                    <input id="category" type="text" placeholder="Enter Category" name="book-category" required>
                </div>

                <button id="add-btn" type="submit">Add Book</button>


            </div>
        </form>

        <div class="sub-container">
            <h2>All Books</h2>
            <div class="all-books">

                <%bData.forEach(function(b){ %>
                    <div class="book-container">
                        <div class="text-container">

                            <p class="b-name">
                                <%=b.title%>
                            </p>
                            <p class="b-author">
                                By <%=b.author%>
                            </p>
                            <p class="b-category">
                                <%=b.category%>
                            </p>
                        </div>
                        <div class="btn-container">
                            <button class="btn-update btn">Update</button>
                            <button class="btn-delete btn">Delete</button>
                        </div>
                    </div>
                    <% });%>
            </div>
        </div>
    </div>


</body>

</html>